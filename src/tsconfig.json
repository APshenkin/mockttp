{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "../dist",
        "strict": true,
        "lib": [
            "dom",
            "es5",
            "scripthost",
            // Required for graphql (but it does actually bring its own polyfill)
            "esnext.asynciterable"
        ]
    },
    "compileOnSave": true,
    "buildOnSave": true,
    "include": [
        "../custom-typings/*.d.ts",
        "**/*.ts",
        "../node_modules/@types/**/*.d.ts"
    ],
    "filesGlob": [
        "../custom-typings/*.d.ts",
        "**/*.ts",
        "../node_modules/@types/**/*.d.ts"
    ]
}
